{
  "name": "k8s-kind-dev",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/kubectl:1": {}
  },
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "containerEnv": {
    "KUBECONFIG": "/workspaces/.kube/dev-kind.yaml",
    "KIND_CLUSTER_NAME": "dev"
  },
  "postCreateCommand": "bash .devcontainer/setup-kind.sh",
  "postStartCommand": "bash .devcontainer/start-kind.sh",
  "customizations": {
    "vscode": {
      "extensions": ["ms-kubernetes-tools.vscode-kubernetes-tools"]
    }
  }
}