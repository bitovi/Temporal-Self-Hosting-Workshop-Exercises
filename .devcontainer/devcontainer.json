{
  "name": "k8s-kind-dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
  },
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "hostRequirements": {
    "cpus": 8,
    "memory": "8gb",
    "storage": "32gb"
  },
  "containerEnv": {
    "KUBECONFIG": "/workspaces/.kube/dev.yaml",
  },
  "postStartCommand": "/bin/bash -lc '.devcontainer/start.sh'",
  "customizations": {
    "vscode": {
      "extensions": ["ms-kubernetes-tools.vscode-kubernetes-tools"]
    }
  },
  "forwardPorts": [8080, 7233]
}